<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/home.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
</head>
<body>
<%- include ./partial/navbar.ejs %>
<div class="col-md-12">
   <form action="#" method="post">
       <div class="form-group ad-30" style="margin-top:8px;">
            <div class="input-group search-style">
                <input type="hidden" id="sender" value="<%=user.username%>">
                <input class="form-control new-search-bar"  name="country" id="search" placeholder="Enter Your Club Name" type="text">
                <span class="input-group-btn">
                    <button class="btn input-btn" type="" id="search-form">Search</button>
                </span>
            </div>
        </div>
   </form>
</div>
  
<div class="col-md-12">
    <input type="hidden" value="<%=user.username%>" id="user-name" name="user-name">
    <input type="hidden" name="user-image" id="user-image" value="<%=user.UserImage%>">
    <div class="">
        <div class="row">
            <div class="col-md-3">
                <div class="row">
                    <div class="col-md-12">
                        <div class="filter-container">
                            <div class="card">
                                <form action="#" method="post">
                                    <div class="content">
                                        <p class="filter">
                                            FILTER
                                        </p>
                                        <hr/>
                                        <select class="" name="country" id="country" >
                                            <option value="">Filter By Country</option>
                                            <% _.forEach(country,function(val){%>
											<option><%=val._id%></option>
                                            <%})%>
                                        </select>
                                        <div class="clearfix"></div>
                                        <button class="btn add-apply">Apply</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-9">
                <div>
                    <div class="category-list">
                        <div class="row">
                            <% _.forEach(data,function(val){%>
                            <form action="/home" method="post" class="favorite">
                                <div class="item col-md-4">
                                    <a style="text-decoration: none" href="/group/<%=val.name%>">
                                    <div class="thumbnail">
                                       <img src="https://webchatapp.s3.ap-south-1.amazonaws.com/<%=val.image%>">
                                        <div class="caption">
                                            <h4><%= val.name%>(<%=val.fans.length%>)</h4>
                                            
                                            <div class="row">
                                                <div class="col-xs-12 col-md-6">
                                                    <p>
                                                        <%=val.country%>
                                                    </p>
                                                </div>
                                                <div class="col-xs-12 col-md-6">
                                                    <input type="hidden" name="clubName" id="clubName" value="<%=val.name%>">
                                                    <input type="hidden" name="clubId" id="clubId" value="<%=val._id%>">
                                                    <input type="hidden" name="clubcountry" id="clubcountry" value="<%=val.country%>">
                                                    <button class="btn add-fav">
                                                        Add To Favorite
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    </a>
                                </div>
                            </form>
                            <%})%>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>

  
    
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>  
<script src="/socket.io/socket.io.js"></script>
<script src="/js/home.js"></script>
<script src="/js/global.js"></script>
</body>
</html>